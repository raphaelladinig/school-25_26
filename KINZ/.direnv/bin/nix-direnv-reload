#!/usr/bin/env bash
set -e
if [[ ! -d "/home/raphael/Sync/school/school_25-26/KINZ" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/raphael/Sync/school/school_25-26/KINZ")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/raphael/Sync/school/school_25-26/KINZ" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/raphael/Sync/school/school_25-26/KINZ/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/raphael/Sync/school/school_25-26/KINZ/.envrc" "/home/raphael/Sync/school/school_25-26/KINZ/.direnv"/*.rc
